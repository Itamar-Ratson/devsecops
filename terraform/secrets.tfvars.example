# Terraform Secrets Template
# Copy this file to secrets.tfvars and fill in your actual values
# NEVER commit secrets.tfvars to version control

# OIDC Client Secrets
# Generate these in Keycloak for each service
oidc_client_secrets = {
  argocd   = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
  grafana  = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
  vault    = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
  headlamp = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
}

# Keycloak Administrator Credentials
keycloak_admin = {
  user     = "admin"
  password = "change-this-secure-password"
}

# Grafana Administrator Credentials
grafana_admin = {
  user     = "admin"
  password = "change-this-secure-password"
}

# ArgoCD Administrator Credentials
# Generate password hash: htpasswd -nbBC 10 "" <password> | tr -d ':\n' | sed 's/$2y/$2a/'
# Generate server secret: openssl rand -base64 32
argocd_admin = {
  password_hash     = "$2a$10$xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
  server_secret_key = "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
}

# Alertmanager Webhook URLs (optional)
alertmanager_webhooks = {
  pagerduty_routing_key = ""
  slack_critical        = ""
  slack_warning         = ""
}

# ArgoCD Repository Access
# Generate SSH key: ssh-keygen -t ed25519 -C "argocd@devsecops" -f ~/.ssh/argocd-deploy-key
argocd_ssh_private_key = <<-EOT
-----BEGIN OPENSSH PRIVATE KEY-----
...your SSH private key here...
-----END OPENSSH PRIVATE KEY-----
EOT

# Git Repository URL
git_repo_url = "git@github.com:username/repository.git"
