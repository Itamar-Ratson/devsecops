# Copy to secrets.tfvars and fill in values
# IMPORTANT: Never commit secrets.tfvars to git

# Transit Vault root token (generate: openssl rand -base64 32)
vault_root_token = ""

# Git repository URL (SSH format for ArgoCD)
git_repo_url = "git@github.com:your-org/your-repo.git"

# ArgoCD deploy key (SSH private key, ed25519)
argocd_ssh_private_key = ""

# ArgoCD OIDC client secret (same value as oidc_client_secrets.argocd)
argocd_oidc_client_secret = ""

# OIDC client secrets (generate each: openssl rand -hex 32)
oidc_client_secrets = {
  argocd   = ""
  grafana  = ""
  vault    = ""
  headlamp = ""
}

# Keycloak admin credentials
keycloak_admin = {
  username = "admin"
  password = ""
}

# Grafana admin credentials
grafana_admin = {
  username = "admin"
  password = ""
}

# ArgoCD admin credentials
# password_hash: htpasswd -nbBC 10 "" 'your-password' | tr -d ':\n'
# server_secret_key: openssl rand -base64 32
argocd_admin = {
  password_hash     = ""
  server_secret_key = ""
}

# Alertmanager webhooks (optional)
alertmanager_webhooks = {
  pagerduty_routing_key  = ""
  slack_critical_webhook = ""
  slack_warning_webhook  = ""
}
