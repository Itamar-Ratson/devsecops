# secrets.tfvars.example - Template for secrets configuration
# Copy to secrets.tfvars and fill in your actual values
# IMPORTANT: secrets.tfvars is gitignored - never commit it!

# Transit Vault
vault_transit_token = "hvs.xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# OIDC Client Secrets (Keycloak)
oidc_client_secrets = {
  argocd   = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
  grafana  = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
  vault    = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
  headlamp = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
}

# Keycloak Admin
keycloak_admin = {
  user     = "admin"
  password = "your-secure-password"
}

# Grafana Admin
grafana_admin = {
  user     = "admin"
  password = "your-secure-password"
}

# ArgoCD Admin
argocd_admin = {
  password_hash     = "$2a$10$xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
  server_secret_key = "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
}

# Alertmanager (optional)
alertmanager_webhooks = {
  pagerduty_routing_key = ""
  slack_critical        = ""
  slack_warning         = ""
}

# ArgoCD Repository Access
argocd_ssh_private_key = <<-EOT
-----BEGIN OPENSSH PRIVATE KEY-----
...
-----END OPENSSH PRIVATE KEY-----
EOT

# Git Repository
git_repo_url = "git@github.com:user/repo.git"
